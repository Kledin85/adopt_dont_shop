<h1>New Application</h1>
<%= form_with url: "/applications/", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address, required: true %>
  
  <%= f.label :city %>
  <%= f.text_field :city, required: true %>
  
  <%= f.label :state %>
  <%= f.text_field :state, required: true %>
  
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code, required: true %>

  <%= f.hidden_field :status, value: "In Progress" %>
  <%# <%= f.hidden_field :description, value: "Waiting for user description." %> %>

  <%= f.submit "Submit" %>
<% end %>